DROP TABLE IF EXISTS PC;

CREATE TABLE PC (
  PC_ID VARCHAR(60) not null primary key,
  TYPE VARCHAR(60) not null,
  BUY_DATE DATE not null,
  RECYCLE_DATE DATE not null,
  PURPOSE VARCHAR(60) not null,
  USER_ID VARCHAR(60),
  USER_NAME VARCHAR(60),
  STATE VARCHAR(60) not null,
  MAKER VARCHAR(60) not null,
  SERIAL VARCHAR(60) not null,
  MAC_ADDRESS VARCHAR(60) not null,
  CPU VARCHAR(60) not null,
  SCORE INT not null,
  MEMORY INT not null,
  RESOLUTION VARCHAR(60) not null,
  GRAPHICS VARCHAR(60) not null,
  OS VARCHAR(60) not null
);

INSERT INTO PC (PC_ID, TYPE, BUY_DATE, RECYCLE_DATE, PURPOSE, USER_ID, USER_NAME, STATE, MAKER,
 SERIAL, MAC_ADDRESS, CPU, SCORE , MEMORY, RESOLUTION, GRAPHICS, OS)
