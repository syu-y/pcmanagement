DROP TABLE IF EXISTS USER;

CREATE TABLE USER (
  USER_ID VARCHAR(60) not null primary key,
  USER_NAME VARCHAR(60) not null,
  PASSWORD VARCHAR(60) not null,
  PERMISSION VARCHAR(60) not null
);
